{
  "name": "project-3",
  "version": "1.0.0",
  "author": "Spencer Smith, Eric Folenta, Josh Sandberg, Crystal Han, and Amin Bouzouita",
  "license": "MIT",
  "description": "MERN application for inventory tracking.",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm yarn start:prod || yarn run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn run client\"",
    "client": "cd packages/app && yarn start",
    "server": "cd packages/server && yarn start",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && yarn install",
    "build": "cd client && yarn run build",
    "heroku-postbuild": "yarn run build"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "if-env": "^1.0.4",
    "mongoose": "^5.3.16",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.0.1"
  }
}